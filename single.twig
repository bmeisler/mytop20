 		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
            <section class="article-content">
                <h1 class="article-h1">{{post.title}}</h1>
                <h2 class="article-h2">{{post.subtitle}}</h2>
                <p class="blog-author"><span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.post_date|date}}</p>
                {{post.content}}
                {% if post.terms('tags') %}
					<span class="tags-links">
					Tagged  
				{% for term in post.terms('tags') %}
					<a href="{{ term.link }}" title="View all posts tagged {{ term.name }}" rel="category tag">{{ term.name }}</a>{% if loop.last == false %},{% endif %} 		
				{% endfor %}
		</span>
		{% endif %}
            </section>
        </article>
